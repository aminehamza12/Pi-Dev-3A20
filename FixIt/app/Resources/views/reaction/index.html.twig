{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reactions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Likeblog</th>
                <th>Dislikeblog</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reaction in reactions %}
            <tr>
                <td><a href="{{ path('reaction_show', { 'id': reaction.id }) }}">{{ reaction.id }}</a></td>
                <td>{{ reaction.likeBlog }}</td>
                <td>{{ reaction.dislikeBlog }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reaction_show', { 'id': reaction.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reaction_edit', { 'id': reaction.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reaction_new') }}">Create a new reaction</a>
        </li>
    </ul>
{% endblock %}
