{% block body %}
    <h1>Blogcategorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogCategorie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ blogCategorie.name }}</td>
