{% extends 'base.html.twig' %}

{% block body %}
<!--************************************
        Inner Page Banner Start
*************************************-->
<div class="tg-mapinnerbanner">
</div>
<!--************************************
        Inner Page Banner End
*************************************-->
<!--************************************
        Main Start
*************************************-->
<main id="tg-main" class="tg-main tg-haslayout">
    <div class="container">
        <div class="row">
            <div id="tg-content" class="tg-content">
                <div class="tg-categories tg-categoriesgrid">
                    {% for category in categories %}
                        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
                            <div class="tg-category">
                                <figure>
                                    <img src="/images/{{ category.picture }}" alt="image description">
                                    <figcaption class="tg-automotive">
                                        {#<span class="lnr lnr-car tg-categoryicon"></span>#}
                                        <span class="tg-categoryname">{{ category.name }}</span>
                                        <a href="{{ path('service_indexCategory', { 'id': category.id }) }}" class="tg-themetag tg-tagjobcount">
                                            <i class="fa fa-clone"></i>
                                            <em>List</em>
                                        </a>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    {% endfor %}
        </div>
    </div>
</main>
<!--************************************
        Main End
*************************************-->
{% endblock %}