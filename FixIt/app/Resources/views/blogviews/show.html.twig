{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blogview</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogView.id }}</td>
            </tr>
            <tr>
                <th>Visites</th>
                <td>{{ blogView.visites }}</td>
            </tr>
            <tr>
                <th>Datevisite</th>
                <td>{% if blogView.dateVisite %}{{ blogView.dateVisite|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blogviews_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('blogviews_edit', { 'id': blogView.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
