{% extends 'adminbase.html.twig' %}

{% block body %}
    <h1>Partner</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ partner.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ partner.type }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ partner.location }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><figure>
                        <img src="{{ vich_uploader_asset(partner, 'imageFile') }}" alt="image description">
                    </figure>
                </td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('partner_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('partner_edit', { 'id': partner.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
