{% extends 'base.html.twig' %}

{% block body %}
    <h1>Newsletterlist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ newsLetterList.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ newsLetterList.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ newsLetterList.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('newsletterlist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('newsletterlist_edit', { 'id': newsLetterList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
