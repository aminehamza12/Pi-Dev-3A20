                                    </ul>
                                </nav>
                            </div>
                            <div class="tg-widgetdashboard hidden-xs">
                                <div class="tg-banneradd">
                                    <figure>
                                        <a href="#"><img src="images/add-01.png" alt="image description"></a>
                                    </figure>
                                </div>
                            </div>
                        </aside>
                    </div>
                    <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
                        <div id="tg-content" class="tg-content">
                            <div class="tg-dashboard tg-dashboardmanageservices">
                                <div class="tg-dashboardhead">
                                    <div class="tg-dashboardtitle">
                                        <h2>Manage Services</h2>
                                    </div>
                                    <a class="tg-btnaddservices" {#data-toggle="modal" data-target=".tg-categoryModal"#} href="{{ path('service_new') }}">+ Add New Service</a>
                                </div>

                                <div class="tg-dashboardservices">
                                    {% for service in services %}
                                        <div class="tg-dashboardservice">
                                            <div class="tg-servicetitle">
                                                <h2><a href="{{ path('service_show', { 'id': service.id }) }}">{{ service.title }}</a> <span>({{ service.type }})</span></h2>
                                            </div>
                                            <div class="tg-btntimeedit">
                                                <span>{{ service.price }} / {{ service.paymentType }}</span>
                                                <a class="tg-btnedite" href="{{ path('service_edit', { 'id': service.id }) }}"><i class="lnr lnr-pencil"></i></a>
                                               {#{{ form_start(delete_form) }}#}
                                                <a class="tg-btndel" href="{{ path('service_delete', { 'id': service.id }) }}" ><i class="lnr lnr-trash"></i></a>
                                                {#{{ form_end(delete_form) }}#}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div id="tg-updateall" class="tg-updateall">
                                    <div class="tg-holder">
                                        <span class="tg-note">* Click <strong>Update Now</strong> to update latest added detail (s).</span>
                                        <a class="tg-btn" href="#">Update Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
