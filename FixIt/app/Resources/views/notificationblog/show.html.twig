{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notificationblog</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notificationBlog.id }}</td>
            </tr>
            <tr>
                <th>Datenotification</th>
                <td>{% if notificationBlog.dateNotification %}{{ notificationBlog.dateNotification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ notificationBlog.type }}</td>
            </tr>
            <tr>
                <th>Isread</th>
                <td>{% if notificationBlog.isRead %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notificationblog_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('notificationblog_edit', { 'id': notificationBlog.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
