{% extends 'adminbase.html.twig' %}

{% block body %}
<div id="page-content">
    <div class="row">
        <div class="eq-height">
            <div class="col-sm-6 eq-box-sm">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-control">
                            <a class="btn btn-success" href="{{ path('workshops_indexAdmin') }}">Back to the list</a>
                        </div>
                        <h3 class="panel-title">New Workshop</h3>
                    </div>

    {{ form_start(form, {'attr':{'class':'form-horizontal' }}) }}
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="demo-hor-inputemail">{{ form_label(form.nom) }}</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.nom,{'attr':{'class':'form-control' }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="demo-hor-inputemail">{{ form_label(form.description) }}</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.description,{'attr':{'class':'form-control' }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="demo-hor-inputemail">{{ form_label(form.dateDebut) }}</label>
                            <div class="col-sm-9">
                                <div id="demo-dp-component">
                                    <div class="input-group date">
                                        {{ form_widget(form.dateDebut,{'attr':{'class':'form-control' }}) }}
                                        <span class="input-group-addon"><i class="fa fa-calendar fa-lg"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="demo-hor-inputemail">{{ form_label(form.dateFin) }}</label>
                            <div class="col-sm-9">
                                <div id="demo-dp-component">
                                    <div class="input-group date">
                                        {{ form_widget(form.dateFin,{'attr':{'class':'form-control' }}) }}
                                        <span class="input-group-addon"><i class="fa fa-calendar fa-lg"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="demo-hor-inputemail">{{ form_label(form.lieu) }}</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.lieu,{'attr':{'class':'form-control' }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="demo-hor-inputemail">{{ form_label(form.imageFile) }}</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.imageFile,{'attr':{'class':'form-control' }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="demo-hor-inputemail">{{ form_label(form.categorie) }}</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.categorie,{'attr':{'class':'form-control' }}) }}
                            </div>
                        </div>
                            <div class="panel-footer text-right">
                                <input id="btn" class="btn btn-info" type="submit" value="Create" />
                            </div>


                            {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}




