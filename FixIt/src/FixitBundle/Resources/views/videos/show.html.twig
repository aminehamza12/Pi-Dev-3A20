{% extends 'adminbase.html.twig' %}

{% block body %}
    <h1>Video</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ video.name }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>
                    <video width="320" height="240" controls>
                        <source src="{{ vich_uploader_asset(video, 'videoFile') }}" type="video/mp4">
                    </video>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('videos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('videos_edit', { 'id': video.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
