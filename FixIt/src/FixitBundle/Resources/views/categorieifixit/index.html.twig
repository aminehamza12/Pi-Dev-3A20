{% extends 'adminbase.html.twig' %}

{% block body %}
    <div id="page-content">
        <div class="row">

            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Categories List</h3>
                    </div>
                    <!-- Foo Table - Add & Remove Rows -->
                    <!--===================================================-->
                    <div class="panel-body">
                        <div class="pad-btm form-inline">
                            <div class="row">
                                <div class="col-sm-6 text-xs-center">
                                    <div class="form-group">
                                        <a href="{{ path('categorieifixit_new') }}" id="demo-btn-addrow" class="btn btn-danger">Add new Category</a>
                                    </div>
                                </div>
                                <div class="col-sm-6 text-xs-center text-right">
                                    <div class="form-group">
                                        <input id="demo-input-search2" type="text" placeholder="Search" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table id="demo-foo-addrow" class="table table-bordered table-hover toggle-circle" data-page-size="7">
                            <thead>
                            <th>Id</th>
                            <th>Type</th>
                            <th>Actions</th>
                            </thead>
                            <tbody>
                            {% for categorieifixit in categorieifixits %}
                                <tr>
                                    <td><a href="{{ path('categorieifixit_show', { 'id': categorieifixit.id }) }}">{{ categorieifixit.id }}</a></td>
                                    <td>{{ categorieifixit.type }}</td>
                                    <td>
                                        <a class="btn btn-warning" href="{{ path('categorieifixit_edit', { 'id': categorieifixit.id }) }}">edit</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="6">
                                    <div class="text-right">
                                        <ul class="pagination"></ul>
                                    </div>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
{% endblock %}


